<p>
  <strong>物件名:</strong>
  <%= @rental.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @rental.rent.to_s(:currency) %>
</p>

<p>
  <strong>住所:</strong>
  <%= @rental.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= @rental.building_age %>年
</p>

<p>
  <strong>備考</strong>
  <%= @rental.remarks %>
</p>

<hr>

<% station_count = 1 %>
<% @rental.stations.each.with_index(1) do |station, index| %>
  <h3>最寄り駅<%= index %></h3>
  <p>
    <strong>路線名</strong>
    <%= station.line_name %>
  </p>
  <p>
    <strong>駅名</strong>
    <%= station.station_name %>
  </p>
  <p>
    <strong>徒歩分数</strong>
    <%= station.time %>分
  </p>

  <% station_count += 1 %>

<% end %>

<%= link_to '編集', edit_rental_path(@rental.id) %> |
<%= link_to '戻る', rentals_path %>
